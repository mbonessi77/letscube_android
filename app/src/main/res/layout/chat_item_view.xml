<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <ImageView
        android:id="@+id/chat_profile_picture"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_user_placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/chat_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Display Name Goes Here"
        app:layout_constraintTop_toTopOf="@id/chat_profile_picture"
        app:layout_constraintStart_toEndOf="@id/chat_profile_picture"/>

    <TextView
        android:id="@+id/chat_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="The chat message will go here"
        app:layout_constraintTop_toBottomOf="@id/chat_user_name"
        app:layout_constraintStart_toStartOf="@id/chat_user_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>